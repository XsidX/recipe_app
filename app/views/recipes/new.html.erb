<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <img class="mx-auto h-8 w-auto" src="https://i.postimg.cc/ZKG1rqnm/pexels-ash-376464.jpg" alt="Workflow">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-orange-900">Create a Recipe</h2>

  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with model: [@recipe] do |f| %>
        <div class="flex flex-col gap-1 mb-2">
          <%= f.label :name, class: "block text-sm font-medium text-gray-700"%>
          <%= f.text_field :name, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
        <div class="flex flex-col gap-1">
          <%= f.label :preparation_time, class: "block text-sm font-medium text-gray-700"%>
          <div class="flex w-20">
            <%= f.number_field :preparation_time, { class: "border-none group-hover:bg-gray-100 outline-none focus:outline-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-center w-full flex items-center text-gray-700  outline-none", min: "0", max: "900"} %>
          </div>
        </div>
        <div class="flex flex-col gap-1">
          <%= f.label :cooking_time, class: "block text-sm font-medium text-gray-700"%>
          <div class="flex w-20">
            <%= f.number_field :cooking_time, { class: "border-none group-hover:bg-gray-100 outline-none focus:outline-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-center w-full flex items-center text-gray-700  outline-none", min: "0", max: "900"} %>
          </div>
        </div>
        <div class="flex flex-col gap-1 mb-2">
          <%= f.label :description, class: "block text-sm font-medium text-gray-700"%>
          <%= f.text_area :description, autofocus: true, rows: 5, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
        <div class="mt-4">
          <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-900 hover:bg-orange-700 focus:outline-none focus:ring-0 focus:ring-offset-0 transition duration-100 ease-in">Create Recipe</button>
        </div>
      <% end %>
    </div>
  </div>
</div>